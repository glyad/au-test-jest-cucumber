{
  "allowSyntheticDefaultImports": true,
  "compileOnSave": false,
  "compilerOptions": {
   "noImplicitAny": false,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es5",
      "es2015",
      "es2015.promise",
      "es2016",
      "esnext.asynciterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "resources": [
        ""
      ],
      "@test/*": ["./test/*"],
      "@src/*": ["./src/*"]
    },
    "allowJs": false
  },
  "include": [
    "./src/**/*.ts",
    "./dev-app/**/*.ts",
    "./test/**/*.ts",
    "./types/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
